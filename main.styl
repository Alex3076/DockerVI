/* common */
*
  margin 0
  padding 0
  border-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  -o-box-sizing border-box
 body
   font-size 10px
.center-block
    display table
    margin-left auto
    margin-right auto
.main-page
    margin-top 100px
.aside-menu
  .ui-menu
    .ui-menu-item
        padding 10px 1em 10px .4em
        border 2px solid #fff
        &.selected
        &:hover
          border 2px solid #4297d7
.ui-jqgrid tr.ui-row-ltr td, .ui-jqgrid tr.ui-row-rtl td
    word-wrap break-word
.content-body
    position relative
    .detail-panel
        position absolute
        width 0
        height 500px
        max-height 500px
        overflow hidden
        top 0
        right -100px
        z-index 9999
        transition width ease .5s
        -webkit-transition width ease .5s
        background #fff
        border 1px solid #fff
        box-shadow 0 0 5px #000
        -webkit-box-shadow 0 0 5px  #000
        visibility hidden
        &.show
            visibility visible
            width 1000px
            right 0
            overflow auto
            border 1px solid rgba(0,0,0,0.2)
        .widget-toolbar
            cursor pointer
        .profile-info-value
            span
                word-break break-all
/* end */
pre
    &.log
        background #000
        color #fff
// span for play and pause
span.state-label
    margin 0 4px
    padding 2px 5px
    min-height 24px
    display inline-block
    line-height 20px
    vertical-align middle
    background-color #b4c2cc!important
    border-radius 4px
    &.play
        background-color #6c9842!important
    &.error
        background-color #b52c26!important
        padding-left 7px
        padding-right 8px
/* detail.jade*/
h1
    span.state-label
        font-size 16px
        padding 5px 10px
        line-height 36px
.details-head
    .btn-group
        margin 20px 0 10px 0
        button
            line-height 24px
.details-body
    margin-top 15px

/* end detail jade*/
/* create jade */
.label-size
    padding-right 25px
form
    .form-group
        .state-error
            input
            select
                &:not(:focus)
                    background #fff0f0
                    border-color #A90329
    span.error
        display  block
        margin-top 6px
        padding: 0 1px
        font-size 11px
        line-height 15px
        color #d56161

    .range-cpu
        margin-left 10px
        width 300px
        span
            &.range-next
                float right

/* end*/
.footer
    margin-top 200px
